{
  "$ref": "#/definitions/ApplicationSetting",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "ApplicationSetting": {
      "additionalProperties": false,
      "properties": {
        "custom_data": {
          "items": {
            "additionalProperties": false,
            "properties": {
              "languages": {
                "additionalProperties": false,
                "properties": {
                  "cs": {
                    "type": "string"
                  },
                  "en": {
                    "type": "string"
                  }
                },
                "required": [
                  "cs",
                  "en"
                ],
                "type": "object"
              },
              "path": {
                "type": "string"
              }
            },
            "required": [
              "path",
              "languages"
            ],
            "type": "object"
          },
          "type": "array"
        },
        "events_map": {
          "additionalProperties": {
            "additionalProperties": false,
            "properties": {
              "cs": {
                "type": "string"
              },
              "en": {
                "type": "string"
              }
            },
            "required": [
              "cs",
              "en"
            ],
            "type": "object"
          },
          "type": "object"
        },
        "graphs": {
          "items": {
            "$ref": "#/definitions/GraphSetting"
          },
          "type": "array"
        },
        "module_version_mapping": {
          "additionalProperties": {
            "items": {
              "type": "string"
            },
            "type": "array"
          },
          "type": "object"
        },
        "records_custom_data": {}
      },
      "required": [
        "custom_data",
        "events_map",
        "module_version_mapping",
        "records_custom_data",
        "graphs"
      ],
      "type": "object"
    },
    "Axis": {
      "enum": [
        "x",
        "y",
        "z"
      ],
      "type": "string"
    },
    "DifferenceGraph": {
      "additionalProperties": false,
      "properties": {
        "axis": {
          "additionalProperties": false,
          "properties": {
            "x": {
              "type": "boolean"
            },
            "y": {
              "type": "boolean"
            },
            "z": {
              "type": "boolean"
            }
          },
          "required": [
            "x",
            "y",
            "z"
          ],
          "type": "object"
        },
        "diff": {
          "enum": [
            "absolute",
            "avg"
          ],
          "type": "string"
        },
        "display": {
          "type": "boolean"
        },
        "part": {
          "$ref": "#/definitions/GraphPart"
        },
        "recommended_max": {
          "type": "number"
        },
        "recommended_min": {
          "type": "number"
        },
        "type": {
          "const": "position-differential",
          "type": "string"
        },
        "unit": {
          "type": "string"
        }
      },
      "required": [
        "type",
        "part",
        "diff",
        "display",
        "axis"
      ],
      "type": "object"
    },
    "GraphPart": {
      "enum": [
        "head",
        "left_hand",
        "right_hand"
      ],
      "type": "string"
    },
    "GraphSetting": {
      "anyOf": [
        {
          "$ref": "#/definitions/PositionGraph"
        },
        {
          "$ref": "#/definitions/RotationGraph"
        },
        {
          "$ref": "#/definitions/RotationPolarGraph"
        },
        {
          "$ref": "#/definitions/DifferenceGraph"
        },
        {
          "$ref": "#/definitions/PositionHeatMapGraph"
        }
      ]
    },
    "PositionGraph": {
      "additionalProperties": false,
      "properties": {
        "display": {
          "type": "boolean"
        },
        "part": {
          "$ref": "#/definitions/GraphPart"
        },
        "type": {
          "const": "position",
          "type": "string"
        }
      },
      "required": [
        "type",
        "part",
        "display"
      ],
      "type": "object"
    },
    "PositionHeatMapGraph": {
      "additionalProperties": false,
      "properties": {
        "display": {
          "type": "boolean"
        },
        "part": {
          "$ref": "#/definitions/GraphPart"
        },
        "type": {
          "const": "position-heatmap",
          "type": "string"
        },
        "x_axis_unit": {
          "type": "string"
        },
        "y_axis_unit": {
          "type": "string"
        }
      },
      "required": [
        "type",
        "part",
        "display"
      ],
      "type": "object"
    },
    "RotationGraph": {
      "additionalProperties": false,
      "properties": {
        "axis": {
          "additionalProperties": false,
          "properties": {
            "x": {
              "type": "boolean"
            },
            "y": {
              "type": "boolean"
            },
            "z": {
              "type": "boolean"
            }
          },
          "required": [
            "x",
            "y",
            "z"
          ],
          "type": "object"
        },
        "display": {
          "type": "boolean"
        },
        "part": {
          "$ref": "#/definitions/GraphPart"
        },
        "type": {
          "const": "rotation",
          "type": "string"
        }
      },
      "required": [
        "type",
        "part",
        "display",
        "axis"
      ],
      "type": "object"
    },
    "RotationPolarGraph": {
      "additionalProperties": false,
      "properties": {
        "axis": {
          "$ref": "#/definitions/Axis"
        },
        "display": {
          "type": "boolean"
        },
        "part": {
          "$ref": "#/definitions/GraphPart"
        },
        "type": {
          "const": "rotation-polar",
          "type": "string"
        }
      },
      "required": [
        "type",
        "part",
        "display",
        "axis"
      ],
      "type": "object"
    }
  }
}